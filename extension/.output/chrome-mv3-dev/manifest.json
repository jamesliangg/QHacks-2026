{
  "manifest_version": 3,
  "name": "Java Oracle Docs Search",
  "description": "Quickly search and open Java Oracle documentation.",
  "version": "0.1.0",
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:3000; object-src 'self'; frame-src https://docs.oracle.com;",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  },
  "permissions": [
    "windows",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_title": "Java Docs Search",
    "default_popup": "popup.html"
  },
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost/*"
  ]
}